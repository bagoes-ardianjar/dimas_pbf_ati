<odoo>
    <data>
        <template id="document_tax_totals_po">
            <!--
                Generic template to display tax totals in pdf reports.
                Used by invoices, SO and PO.

                ARGUMENTS:
                - tax_totals: dict in the form generated by account.move's _get_tax_totals.
            -->
           <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="border-black o_total">
                    <td style="width:20%;"><strong t-esc="subtotal['name']"/></td>

                    <td class="text-right" style="width:20%;">
                        <span t-att-class="oe_subtotal_footer_separator" t-esc="subtotal['formatted_amount']"/>
                    </td>
                </tr>

<!--                <tr t-if="o.total_discount > 0.0">-->
<!--                    <td name="td_amount_total_discount">-->
<!--                        <strong>Total Discount</strong>-->
<!--                    </td>-->
<!--                    <td class="text-right">-->
<!--                        <span t-field="o.total_discount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
<!--                    </td>-->
<!--                </tr>-->
                <tr t-if="o.total_global_discount &gt; 0.0">
                    <td name="td_amount_total_global_discount" style="width:20%;">
                        <strong>Total Global Discount</strong>
                    </td>
                    <td class="text-right" style="width:20%;">
                        <span t-field="o.total_global_discount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                    </td>
                </tr>

<!--                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>-->
<!--                <t t-call="account.tax_groups_totals"/>-->

                <tr t-if="o.amount_tax &gt; 0.0">
                    <td name="td_amount_tax" style="width:20%;">
                        <strong>PPN</strong>
                    </td>
                    <td class="text-right" style="width:20%;">
                        <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                    </td>
                </tr>
            </t>
             <tr t-if="o.amount_pph &gt; 0.0">
                <td name="td_amount_pph" style="width:20%;">
                    <strong>PPH 22</strong>
                </td>
                <td class="text-right" style="width:20%;">
                    <span t-field="o.amount_pph" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>

            <!--Total amount with all taxes-->
            <tr class="border-black o_total">
                <td style="width:20%;"><strong>Total</strong></td>
                <td class="text-right" style="width:20%;">
                    <span t-esc="tax_totals['formatted_amount_total']"/>
                </td>
            </tr>
        </template>
        <template id="report_po_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//table[hasclass('o_main_table')]//thead//tr//th[@name='th_price_unit']" position="after">
                <t t-set="display_discount" t-value="any(l.discount for l in o.order_line)"/>
                <th t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">Disc. Type</th>
                <th t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">Disc.</th>
            </xpath>

            <xpath expr="//table[hasclass('o_main_table')]//tbody//tr//td//span[@t-field='line.price_unit']//.." position="after">
                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                    <span t-field="line.discount_type"/>
                </td>
                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                    <span t-field="line.discount"/>
                </td>
            </xpath>

            <xpath expr="//div[@id='total']" position="replace">
                <div id="total" class="row justify-content-end">
                    <div class="col-5">
                        <table class="table table-sm">
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-call="discount_purchase_order.document_tax_totals_po"/>
                        </table>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
